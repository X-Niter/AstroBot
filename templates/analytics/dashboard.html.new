{% extends "base.html" %}

{% block title %}Analytics Dashboard{% endblock %}

{% block styles %}
<style>
/* Custom Dashboard Styles */
.dashboard-container {
    height: calc(100vh - 80px); /* Adjust based on your navbar height */
    overflow: hidden;
}

.dashboard-content {
    height: 100%;
    overflow-y: auto;
    padding: 15px;
}

.chart-container {
    position: relative;
    height: 300px;
    max-height: 300px;
    width: 100%;
}

.stat-card {
    transition: transform 0.2s;
}

.stat-card:hover {
    transform: translateY(-5px);
}

.data-table-container {
    max-height: 400px;
    overflow-y: auto;
}
</style>
{% endblock %}

{% block content %}
<div class="dashboard-container">
    <div class="dashboard-content">
        <!-- Header Section -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center bg-light">
                        <h5 class="mb-0">Analytics Dashboard</h5>
                        <div class="d-flex">
                            <div class="dropdown me-2">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="timeRangeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    Last 7 Days
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="timeRangeDropdown">
                                    <li><a class="dropdown-item active" href="#" data-range="7">Last 7 Days</a></li>
                                    <li><a class="dropdown-item" href="#" data-range="14">Last 14 Days</a></li>
                                    <li><a class="dropdown-item" href="#" data-range="30">Last 30 Days</a></li>
                                    <li><a class="dropdown-item" href="#" data-range="90">Last 90 Days</a></li>
                                </ul>
                            </div>
                            <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#liveActivityModal">
                                <i class="bi bi-activity"></i> Live Activity
                            </button>
                        </div>
                    </div>
                    <div class="card-body py-2">
                        <div class="alert alert-info py-2 mb-0">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                                <div>
                                    <p class="mb-0">Premium analytics dashboard with interactive charts and real-time updates.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-3 mb-3" id="stats-cards-container">
            <div class="col-sm-6 col-lg-3">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px; background-color: rgba(0, 123, 255, 0.1)">
                            <i class="bi bi-people-fill text-primary fs-4"></i>
                        </div>
                        <div>
                            <div class="text-secondary small">Total Users</div>
                            <div class="fs-4 fw-bold" id="total-users">5,428</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px; background-color: rgba(111, 66, 193, 0.1)">
                            <i class="bi bi-terminal-fill text-purple fs-4"></i>
                        </div>
                        <div>
                            <div class="text-secondary small">Commands Used</div>
                            <div class="fs-4 fw-bold" id="commands-used">15,342</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px; background-color: rgba(40, 167, 69, 0.1)">
                            <i class="bi bi-robot text-success fs-4"></i>
                        </div>
                        <div>
                            <div class="text-secondary small">AI Prompts</div>
                            <div class="fs-4 fw-bold" id="ai-prompts">3,247</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card border-0 shadow-sm stat-card">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px; background-color: rgba(220, 53, 69, 0.1)">
                            <i class="bi bi-shield-check text-danger fs-4"></i>
                        </div>
                        <div>
                            <div class="text-secondary small">Mod Actions</div>
                            <div class="fs-4 fw-bold" id="mod-actions">267</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row 1 -->
        <div class="row g-3 mb-3">
            <!-- Activity Over Time Chart -->
            <div class="col-12 col-lg-8">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Activity Over Time</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="activity-chart"></canvas>
