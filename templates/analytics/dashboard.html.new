            <!-- Top Commands Chart -->
            <div class="col-12 col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Top Commands</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="commands-chart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row 2 -->
        <div class="row g-3 mb-3">
            <!-- Server Activity Heatmap -->
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Hourly Activity Heatmap</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="heatmap-chart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- AI Usage Breakdown -->
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">AI Model Usage</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="ai-usage-chart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Servers Table -->
        <div class="row g-3">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center bg-light">
                        <h6 class="mb-0">Top Active Servers</h6>
                        <button class="btn btn-sm btn-outline-primary" id="refresh-servers">
